import tkinter as tk
from tkinter import ttk

class MainWindow:
    def __init__(self, root):
        self.root = root
        self.root.title("Tkinter Window")

        # Manuelle Daten
        self.manual_data = {
            "Wartungskosten": tk.StringVar(value="vernachl채ssigbar")
        }

        self.create_widgets()

    def create_widgets(self):
        ttk.Label(self.root, text="Wartungskosten:").pack(pady=10)
        wartungskosten_dropdown = ttk.Combobox(self.root, values=["vernachl채ssigbar", "unwichtig", "neutral", "wichtig", "sehr wichtig"], textvariable=self.manual_data["Wartungskosten"])
        wartungskosten_dropdown.pack(pady=5)

        ttk.Button(self.root, text="Show Value", command=self.show_value).pack(pady=10)

    def show_value(self):
        wartungskosten_value = self.manual_data["Wartungskosten"].get()

        # Ausw채rtung Bewertung Wartungskosten
        if wartungskosten_value=="vernachl채ssigbar":
            beww = 0
        elif wartungskosten_value=="unwichtig":
            beww = 1
        elif wartungskosten_value=="neutral":
            beww = 2
        elif wartungskosten_value=="wichtig":
            beww = 3
        elif wartungskosten_value=="sehr wichtig":
            beww = 4
        
        print(beww)

if __name__ == "__main__":
    root = tk.Tk()
    app = MainWindow(root)
    root.mainloop()