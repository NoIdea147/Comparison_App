import matplotlib.pyplot as plt
import numpy as np

# Beispiel-Daten
x_data = np.linspace(0, 10, 100)  # Erzeuge 100 Werte zwischen 0 und 10
y_data = np.sin(x_data)

# Plot erstellen
plt.plot(x_data, y_data, label='Sinus-Funktion')

# Achsenskalierung und Tick-Markierungen festlegen
plt.xlim(0, 10)
plt.ylim(-1, 1)
plt.xticks(np.arange(0, 11, 1))  # Benutzerdefinierte X-Tick-Markierungen von 0 bis 10 in Schritten von 1
plt.yticks(np.arange(-1, 1.1, 0.2))  # Benutzerdefinierte Y-Tick-Markierungen von -1 bis 1 in Schritten von 0.2

# Beschriftungen hinzufÃ¼gen
plt.xlabel('X-Achse')
plt.ylabel('Y-Achse')
plt.title('Fein skalierte Achsen mit benutzerdefinierten Tick-Markierungen')

# Legende anzeigen
plt.legend()

# Diagramm anzeigen
plt.show()
